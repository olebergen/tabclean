{
  "manifest_version": 2,
  "name": "Auto Close Inactive Tabs",
  "version": "1.0",
  "description": "Closes tabs inactive for more than 24 hours.",
  "permissions": ["tabs", "alarms"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tabclean@oleb.dev"
    }
  },
  "browser_action": {
    "default_title": "Clean Old Tabs",
    "default_popup": "popup.html",
    "default_icon": {
      "24": "icon.png"
    }
  }
}
